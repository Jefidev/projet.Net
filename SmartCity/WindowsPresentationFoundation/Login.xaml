<Window x:Class="WindowsPresentationFoundation.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1000">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="TitreLabel" Content="Bienvenue sur Admin@SmartCity" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="-0.114,0.515" FontWeight="Bold" Foreground="#FF75D141"/>
        <TextBox x:Name="LoginTB" HorizontalAlignment="Left" Height="23" Margin="170,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordTB" HorizontalAlignment="Left" Height="23" Margin="170,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="LoginLabel" Content="Login (mail) :" HorizontalAlignment="Left" Margin="70,195,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PasswordLabel" Content="Mot de passe :" HorizontalAlignment="Left" Margin="70,252,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ConnexionButton" Content="Connexion" HorizontalAlignment="Left" Margin="150,320,0,0" VerticalAlignment="Top" Width="75" Click="ConnexionButton_Click"/>
        <Label x:Name="ResultatLabel" Content="Label" HorizontalAlignment="Left" Margin="250,320,0,0" VerticalAlignment="Top" Foreground="Red" FontWeight="Bold" Visibility="Hidden"/>
    </Grid>
</Window>
